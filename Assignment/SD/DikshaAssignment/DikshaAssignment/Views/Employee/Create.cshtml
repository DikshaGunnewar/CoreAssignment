@model DikshaAssignment.Models.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Employee</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger">First name is required.</span>
            </div>
             <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" required/>
                <span asp-validation-for="LastName" class="text-danger">Last name is required.</span>
            </div>
            
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" required/>
                <span asp-validation-for="Address" class="text-danger">Address is required.</span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label">Comapny</label>
                <input asp-for="CompanyName" class="form-control" required/>
                <span asp-validation-for="CompanyName" class="text-danger">Company name is required.</span>
            </div>
            <div class="form-group">
                <label asp-for="Designation" class="control-label">Designation</label>
                <input asp-for="Designation" class="form-control" required/>
                <span asp-validation-for="Designation" class="text-danger">Designation is required</span>
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label">EmailId</label>
                <input asp-for="EmailId" class="form-control" required/>
                <span asp-validation-for="EmailId" class="text-danger">EmailId is required.</span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label">Salary</label>
                <input asp-for="Salary" class="form-control" required/>
                <span asp-validation-for="Salary" class="text-danger">Salary is required.</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            </div>
        </form>
    </div>
</div>


